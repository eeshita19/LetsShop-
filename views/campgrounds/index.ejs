<%- include ("../partials/header")%>
<div class="container">
    <header class="jumbotron">
        <div class="container">

            <h1>Welcome to LetsShop!</h1>
            <p> View all the shops/atms near you!!</p>
            <p> Stay Safe in this Covid-19</p>
            <p><a class=" btn btn-primary btn-lg" href="/campgrounds/new">Add Your Shop</a></p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Registered Shops</h3>

        </div>
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>">
            </div>
            <div class="caption">
               <h4><%= campground.name %></h4> 

            </div>
            <p>
                <a href="/campgrounds/<%= campground._id%> " class="btn btn-primary">Get in Queue and Place Order</a>
            </p>
                
            
            
        </div>
        <% }); %>

    </div>

</div>


<%- include ("../partials/footer")%>